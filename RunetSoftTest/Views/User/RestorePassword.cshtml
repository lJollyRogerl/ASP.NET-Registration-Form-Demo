
@{
    ViewBag.Title = "Восстановление пароля";
}

<h2>Восстановление пароля</h2>

@using (Html.BeginForm())
{
    if (Convert.ToBoolean(ViewBag.Status))
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    else
    {
        if (ViewBag.Message != null)
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }

        <div class="form-group">
            @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Восстановить" class="btn btn-default" />
            </div>
        </div>
    }
}

<div>
    @Html.ActionLink("Перейти к авторизации", "Login")
</div>